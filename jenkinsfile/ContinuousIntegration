pipeline {
    agent any
    stages {

        stage('Compile and Test') {
            tools {
                jdk 'jdk-12'
            }
            steps {
                echo 'Cleaning Workspace'
                sh 'echo $JAVA_HOME'
                sh 'chmod +x ./gradlew'
                sh './gradlew clean'


                echo 'Compile and Test'
                sh './gradlew test'
            }
        }

    }

}