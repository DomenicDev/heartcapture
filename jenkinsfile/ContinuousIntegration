pipeline {
    agent any
    tools {
        jdk 'jdk-12'
    }
    stages {
        stage('Compile and Test') {
            steps {
                echo 'Using Java Version $JAVA_HOME'
                sh 'chmod +x ./gradlew'
                sh './gradlew clean test'
            }
        }
    }
    post {
        success {
            jacoco()
        }
    }

}